<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Custom CSS */
        body {
            background-color: #fafafa;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 250px;
            background-color: #286bad;
            padding-top: 60px;
            color: white;
        }

        .sidebar a {
            padding: 10px 15px;
            display: block;
            color: #fff;
            transition: background-color 0.3s ease;
            text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .nav-link:hover {
            color: white !important;
        }

        .login:hover {
            background-color: #30f925 !important;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar ">
            <h6> <%= email %> </h6>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/pemilik">Pemilik</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/dpi">DPI</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/alat">Alat Tangkap</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/kapal">Kapal</a>
                </li>
            </ul>
            <div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link login" href="/login"
                            style="color: green; background-color: rgb(57, 222, 222); ">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link log" href="/logout"
                            style="color: rgb(3, 0, 0); background-color: rgb(234, 102, 102);">Logout</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>


    <!-- Page Content -->
    <div class="content ">
        <h1>Welcome to Dashboard Alat Tangkap</h1>
        <p>This is the main content area of the dashboard.</p>
        <div class="container">
            <% if (messages.success) { %>
            <div class="alert alert-info" role="alert">
                <%= messages.success %>
            </div>
            <% } %>
            <div class="row">
                <div class="col">
                    <a href="/alat/create" class="btn btn-sm btn-success mb-2 mt-3">Tambah</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nama Alat Tangkap</th>
                                <th colspan="2" scope="col">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < data.length; i++) { %>
                            <tr>
                                <th scope="row"><%= (i+1) %></th>
                                <td><%= data[i].nama_alat_tangkap %></td>
                                <td>
                                    <a href="/alat/edit/<%= data[i].id_alat_tangkap %>"
                                        class="btn btn-sm btn-warning">Edit</a>
                                </td>
                                <td>
                                    <a href="/alat/delete/<%= data[i].id_alat_tangkap %>"
                                        class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>